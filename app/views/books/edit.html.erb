<%= render 'error', object: @book %>
<div class="container">
	<div class="row">
		<div class="col-lg-6 col-lg-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			<div class="field-box">
				<h5>Title</h5>
				<%= f.text_field :title, class: "col-lg-12" %>
				<h5>Opinion</h5>
				<%= f.text_area :body, class: "col-lg-12" %>
			</div>
				<div class="create-editing">
				<%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
			<% end %>
			<%= link_to "Show", book_path(@book.id) %> | 
			<%= link_to "Back", books_path %>
		</div>
		<div class="col-lg-6">
		</div>
	</div>
</div>
<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">CopyRight Infrafop.inc</div>
		</div>
	</div>
</footer>
<div class="body">
<div class="container">
	<div class="row">
		<div class="col-lg-3 ">
			<h1>User info</h1>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
				<table class="table table-hover">
					<tr>
						<th>name</th>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<th>introduction</th>
						<td><%= @user.introduction %></td>
					</tr>
				</table>

				<%= link_to "", edit_user_path(@user.id), class: "btn btn-default glyphicon glyphicon-wrench btn-block" %>

			<h1>New book</h1>
			<%= form_for(@book) do |f| %>
			<h5>Title</h5>
			<%= f.text_field :title , class: "col-lg-12" %>
			<h5>Opinion</h5>
			<%= f.text_area :body , class: "col-lg-12"%>
			<div class = "create">
			<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
			</div>
			<% end %>
			</div>

		<div class="col-lg-9">
			<h1>Users</h1>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>image</th>
						<th></th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 10, 10, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "40x40" %></td>
					<td><%= user.profile_image %></td><td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user.id) %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
</div>
<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">CopyRight Infrafop.inc</div>
		</div>
	</div>
</footer>

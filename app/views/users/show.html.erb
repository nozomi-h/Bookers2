<div class="body">
<div class="container">
	<div class="row">
		<div class="col-lg-3 ">
			<h1>User info</h1>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
				<table class="table">
					<thead>
					<tr>
						<th>name</th>
						<td><%= @user.name %></td>
					</tr>
					</thead>
					<tbody>
						<th>introduction</th>
						<td><%= @user.introduction %></td>
					</tbody>
				</table>
				<% if @user.id == current_user.id %>
				<%= link_to "", edit_user_path(current_user.id), class: "btn btn-default glyphicon glyphicon-wrench btn-block" %>
				<% else %>
				<%= link_to "", user_path(current_user.id), class: "btn btn-default glyphicon glyphicon-wrench btn-block" %>
				<% end %>

			<h1>New book</h1>
			<%= form_for(@book) do |f| %>
			<h5>Title</h5>
			<%= f.text_field :title , class: "col-lg-12" %>
			<h5>Opinion</h5>
			<%= f.text_area :body , class: "col-lg-12" %>
			<div class = "create">
			<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
			</div>
			<% end %>
			</div>

		<div class="col-lg-9">
			<h1>Books</h1>
			<table class="table table-hover">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				</thead>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "40x40" %></td>
					<td><%= link_to book.title, book_path(book.id) %></td><td><%= book.body %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
</div>
<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">CopyRight Infrafop.inc</div>
		</div>
	</div>
</footer>

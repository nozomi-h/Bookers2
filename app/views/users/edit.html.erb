<%= render 'error', object: @user %>
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<div class="userinfo">
			<h2>User info</h2>
			<%= form_for(@user) do |f| %>
				<h4>Name</h4>
				<%= f.text_field :name %>
				<h4>Image</h4>
				<%= f.attachment_field :profile_image %>
				<h4>
				introduction
				<%= f.text_area :introduction %>
				</h4>
			    <%= f.submit 'Update User' %>
			<% end %>
			</div>
		</div>
		<div class="col-lg-9">
		</div>
	</div>
</div>
<footer>
	<div class="container">
		<div class="row">
			<div class="col-xs-3 col-xs-offset-9">CopyRight Infrafop.inc</div>
		</div>
	</div>
</footer>